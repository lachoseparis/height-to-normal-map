{
  "name": "height-to-normal-map",
  "version": "0.0.1",
  "description": "Generate normal map from height map",
  "main": "index.js",
  "type": "module",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev:front": "vite",
    "build": "vite build && npm run copy-sources",
    "copy-sources": "copyfiles './sources/**/*' ./files",
    "build:front": "vite build",
    "save": "npm-run-all --parallel serve copy-images",
    "copy-images": "node ./lib/launcher.js",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prettier:code": "prettier \"**/*.js\"",
    "prettier:other": "prettier \"**/*.{md,css,scss,yaml,yml}\"",
    "testlint": "eslint lib/**/*.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md,css,scss,yaml,yml}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=12.2.x",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lachoseparis/height-to-normal-map.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/lachoseparis/height-to-normal-map/issues"
  },
  "homepage": "https://github.com/lachoseparis/height-to-normal-map#readme",
  "dependencies": {
    "copy-dir": "^1.3.0",
    "copyfiles": "^2.4.1",
    "fs.promises.exists": "^1.1.3",
    "image-size": "^1.0.2",
    "p-iteration": "^1.1.8",
    "puppeteer": "^18.0.5",
    "rimraf": "^3.0.2",
    "serve": "^14.0.1",
    "serve-handler": "^6.1.3",
    "three": "^0.145.0",
    "vite": "^3.1.4"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-syntax-top-level-await": "^7.14.5",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "prettier": "^2.7.1"
  }
}
